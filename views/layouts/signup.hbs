<div class="container">
    <div class="row">
        <ul id="tabs" class="tabs">
            <li class="tab col s6">
                <a href="#login">Login</a>
            </li>
            <li class="tab col s6">
                <a class="active" href="#sign_up">Sign Up</a>
            </li>
        </ul>
        <div id="login" class="col s12">
            <div class="innter-form">
                {{#if message }}
