<style>
	.cover-image {
		width: 100%;
		height: 40%;
		z-index: -1;
		position: absolute;
	}
	.video-section {
		margin-top: 5%;
	}
	.comment-input {
	    border: .5px solid grey !important;
	    border-radius: 2px !important;
	}
	.comment-input::placeholder {
		text-align: right !important;
	}
</style>
{{> startfile}}
    {{> header}}
    <div>
    	<div>
    		<img class="cover-image" src={{data.cover_picture}}>
    	</div>
    	<div class="container">
			<div class="center section video-section">
				<video width="640" height="360" controls>
					<source src={{data.video}} type="video/mp4" />
				</video>
			</div>
			<div class="section center">
    			<h3>Thank You For Sponsering</h3>
    			<h3>{{data.name}}</h3>
    		</div>
    		<div class="divider"></div>
    		<div class="section row">
    			<div class="col s6">
    				<div class="section row">
    					<div class="left">
    						{{pkg_name}}
    					</div>
    					<div class="right">
    						Package:
    					</div>
    				</div>
    				<div class="divider"></div>
    				<div class="section row">
    					<div class="left">
    						Reward if any
    					</div>
    					<div class="right">
    						Reward:
    					</div>
    				</div>
    				<div class="divider"></div>
    				<div class="section row">
    					<div class="left">
    						{{amount}}
    					</div>
    					<div class="right">
    						Cost:
    					</div>
    				</div>
    				<div class="divider"></div>
    			</div>
    			<div class="col s6">
    				<div class="section col s10 offset-s2">
    					<p class="rtl text-align-right">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.&lrm;</p>
	    			</div>
    				<div class="section">
    					<p class="right">Leave a Comment</p>
    				</div>
    				<div class="section col s10 offset-s2">
				        <div class="input-field col s12">
				          <textarea id="textarea" class="comment-input materialize-textarea rtl" placeholder="e.g. sample text here (460 characters)"></textarea>
				        </div>
    				</div>
    				<div class="section col s10 offset-s2">
				        <button class="right btn-large red lighten-1 waves-effect waves-light" type="submit">Post Comment</button>
    				</div>
    			</div>
    		</div>
		</div>
    </div>
    {{>recommended}}
    {{> footer}}
{{> endfile}}