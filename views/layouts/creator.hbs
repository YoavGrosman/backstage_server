<style>
	.cover-image {
		width: 100%;
		height: 40%;
		z-index: -1;
		position: absolute;
	}
	.page.container {
		width: 80%;
	}
	.tabs .tab a.active {
        color: #ef5350 !important;
    }
    .tabs .tab a {
        color: #757575 !important;
    }
    .tab-content {
    	margin-left: 30%;
    }
    .tab-header {
    	font-size: 120%;
    }
    .collapse-section {
    	margin-top: 11%;
    }
	.package-info {
    	margin-top: 25%;
    }
    .package-header {
    	float: right;
    }
    .left-section {
    	float:left;
    	width: 30%;
    }
    .payment-selector select {
        font-size: 16px;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        background-color: transparent;
        height: 45px;
        border: 0px;

        padding: 10px;
        margin: 8px 0;
        border-bottom: 1px solid black !important;
    }
    .payment-selector:after {
        content: '\f0dd';
        font: normal normal normal 15px/1 FontAwesome;
        float:left;
        margin-top: -14%;
        margin-left: 8%;
    }
    .currency-selector {
    	width: 30%;
    	float: left;
    }
    .pay-total {
    	float: right;
    }

	.payment-slider input[type=range]::-webkit-slider-thumb {
		background-color: #ef5350;
	}
	.payment-slider input[type=range]::-moz-range-thumb {
		background-color: #ef5350;
	}
	.payment-slider input[type=range]::-ms-thumb {
		background-color: #ef5350;
	}

	.payment-slider input[type=range] + .thumb {
		background-color: #dedede;
	}
	.payment-slider input[type=range] + .thumb.active .value {
		color: #ef5350;
	}

	.all-posts ul{
	    list-style-type: none;
	    margin: 0;
	    padding: 0;
	    position: relative;
	    top:0
	}

	.all-posts ul:last-of-type {
		top:60px;
	}

	.all-posts ul:before{
	    content: "";
	    display: block;
	    width: 0;
	    height: 120%;
	    border:1px solid #bdbdbd;
	    position: absolute;
	    top:-10%;
	    right:-30px
	}

	.all-posts ul li{
	    position: relative;
	    margin-top: 20%;
	    line-height: 20px;
	}


	.all-posts ul li > span{
	    content: "";
	    display: block;
	    width: 0;
	    height: 100%;
	    position: absolute;
	    top:-25%;
	    right:-30px
	}

	.all-posts ul li > span:before {
		top:-10px;
	}

	.all-posts ul li > span:after {
		top:95%;
	}

	.all-posts .date span{
	    position: absolute;
	    right: 20px;
	    font-size:80%;
	    font-weight: bold;
	    color: #424242;
	}

	.date span:after {
	    content: "";
	    display: block;
	    width: 10px;
	    height: 10px;
	    border-radius: 50%;
	    background:#eeeeee;
	    border:1px solid #9e9e9e;
	    position: absolute;
	    right:50px
	}

	.date span:before {
	    content: "";
	    display: block;
	    width: 100px;
	    height: 0px;
	    border-bottom:1px solid #9e9e9e;
	    position: absolute;
	    right:-50px;
	    top: 25px;
	}

	.post-section {
		padding-bottom: 10%;
		margin-top:10px !important;
	}
	.all-posts ul::before {
		top: -2%;
		height: 99%;
	}

	.overview-section {
		position: absolute;
		margin-top: -5%;
	}

	.overview {
		min-height: 250px;
	}

	.share-btn {
		margin-top: -8%;
	}
	.share-btn button {
		width: 100%;
	}
    .shift-left {
    	margin-right: 20%;
    }
    .shift-up {
    	margin-top: -15%;
    }
    .fullscreen-modal {
        width: 100%;
        max-height: 100%;
        height: 100%;
        top: 0 !important;
    }
    .facebook {
        color: #01579b;
    }

    .twitter {
        color: #00aced;
    }
    .btn-font {
    	font-size: 75%;
    }
    .background-grey {
    	background-color: #e0e0e0;
    }
    .background-grey:after {
    	background-color: #ffffff;
    }
    .circle-loader.c100 > span {
    	top: -10%;
    }
    #faq-section.collapsible {
    	border: 0;
    	webkit-box-shadow: 0 !important;
		box-shadow: unset !important;
    }
    .comment-card .row {
    	margin-bottom: 0px;
    }
    .comment-card.card-content {
    	padding-right: 50px !important;
    	padding-top:0 !important;
    	padding-left:0 !important;
    	padding-bottom:0 !important;
    }
    .user-circle {
      	width: 50px;
      	height: 50px;
      	-webkit-border-radius: 25px;
      	-moz-border-radius: 25px;
      	border-radius: 25px;
      	background: #ef5350;
      	position: absolute;
		right: -25px;
		line-height: 50px;
  		text-align: center;
    }
    .card.vertical-align {
    	display: grid;
    }


	.circle-top {
	    content: "";
	    display: block;
	    width: 10px;
	    height: 10px;
	    border-radius: 50%;
	    background:#eeeeee;
	    border:1px solid #9e9e9e;
	    position: absolute;
	    top:-35px;
	    right:-34px;
	}

.badge-custom {
   position:relative;
}
.badge-custom[data-badge]:after {
   content:attr(data-badge);
   position:absolute;
   top:0px;
   right:0px;
   font-size:.8em;
   background-color: transparent;
   color:#ef5350;
   width:18px;height:18px;
   text-align:center;
   line-height:18px;
}
</style>
{{> startfile}}
    {{> header}}
    <div>
    	<div>
	    	<img class="cover-image" src= {{data.cover_picture}}>
		    <div id="" class="section row">
