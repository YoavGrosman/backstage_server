<style>
    #modalLogin {
        overflow: hidden;
    }
    .login-form {
        padding-left:5% !important;
        padding-right:5% !important;
    }
</style>
<div>
    <div class="row">
        <a href="#!" class="modal-close btn-flat right"><i class="material-icons">close</i></a>
        <div class="col s8" style="background-image: url('../band.jpg');height: 100%;background-size:150%;"></div>
        <div class="col s4 login-form">
            <h2 class="center"><span class="text-style">Back</span>Stage</h2>
            <h6 class="center">Welcome Back</h6>
            <p class="center">Log into Your Account Here</p>
            <form action="/login" method="post">
                <div class="input-field">
                    <i class="material-icons prefix">email</i>
                    <input
                        id="email"
                        name="email"
                        type="email"
                        required
                    >
                    <label for="icon_prefix">Your Email Address</label>
                </div>
                <div class="input-field">
                    <i class="material-icons prefix">lock_outline</i>
                    <input id="password" name="password" type="password" required>
                    <label for="password">Password (Min 6 Characters)</label>
                </div>

                <button class="btn-large red lighten-1 waves-effect col s12" type="submit" name="action">Log In</button>
                <p class="center">Don't Have An Account? <a class="modal-close modal-trigger" href="#modalSignup">Sign Up</a></p>
            </form>
        </div>
    </div>
</div>